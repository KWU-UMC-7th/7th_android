<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="18dp"
        android:text="투유"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bell_IV"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginEnd="25dp"/>

    <ImageView
        android:id="@+id/line_IV"
        android:layout_width="151dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="151dp"/>

    <TextView
        android:id="@+id/today_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜"
        app:layout_constraintEnd_toEndOf="@+id/line_IV"
        app:layout_constraintStart_toStartOf="@+id/line_IV"
        app:layout_constraintTop_toTopOf="@+id/line_IV" />

    <TextView
        android:id="@+id/ment_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멘트"
        app:layout_constraintEnd_toEndOf="@+id/line_IV"
        app:layout_constraintStart_toStartOf="@+id/line_IV"
        app:layout_constraintTop_toBottomOf="@+id/line_IV"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/bubble_IV"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_ment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ment_TV"
        android:layout_marginTop="26dp"/>

    <ImageView
        android:id="@+id/postbox_IV"
        android:layout_width="200dp"
        android:layout_height="445dp"
        android:src="@drawable/ic_postbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bubble_IV"
        android:layout_marginTop="16dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_nav"
        app:labelVisibilityMode="labeled"
        app:itemTextColor="@color/black"
        app:itemIconTint="#2196F3"/>

</androidx.constraintlayout.widget.ConstraintLayout>


